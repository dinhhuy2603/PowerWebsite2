@using PowerManagement.Models
@model UserAccLogin
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Log In</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/Content/images/favicon.ico">

    <!-- App css -->
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" type="text/css" id="bs-default-stylesheet" />
    <link href="~/Content/css/app.min.css" rel="stylesheet" type="text/css" id="app-default-stylesheet" />

    <!-- icons -->
    <link href="~/Content/css/icons.min.css" rel="stylesheet" type="text/css" />

    <link href="~/Content/css/style.css" rel="stylesheet" type="text/css" />

</head>
<style>
    .card {
        background-color: transparent !important;
    }
    .form-group .form-control {
        border-radius: 40px;
        border: none;
        padding: 1.5rem 1.5rem;
        /*margin-top: 1.5rem;*/
    }
</style>

<body class="loading authentication-bg-pattern">

    <div class="account-pages mt-5 mb-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-6">
                    <div class="card bg-pattern">

                        <div class="card-body p-4">

                            <div class="text-center w-75 m-auto">
                                <div class="auth-logo">
                                    <a href="#" class="logo logo-dark text-center">
                                        <span class="logo-lg">
                                            @*<img src="~/Content/images/logo.png" >*@
                                            <img src="~/Content/images/login_logo.jpg" alt="" height="100"/>
                                        </span>
                                    </a>
                                </div>
                                <p class="text-muted mb-4 mt-3 font-16">Enter your username and password to access admin panel.</p>
                            </div>

                            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "user", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)
                                if (@ViewBag.Message != null)
                                {
                                    <div style="border: 1px solid red; color: orangered">
                                        @ViewBag.Message
                                    </div>
                                }

                                <div class="form-group mb-3">
                                    <label for="emailaddress" class="font-16"></label>
                                    @*<input class="form-control" id="emailaddress" required="" placeholder="Enter your Username">*@
                                    @Html.TextBoxFor(m => m.user, new { placeholder = "Enter your Username", @class = "form-control", autocomplete = "off" })
                                    @Html.ValidationMessageFor(m => m.user, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group mb-3">
                                    <label for="password" class="font-16"></label>
                                    @Html.PasswordFor(m => m.pass, new { placeholder = "Enter your password", @class = "form-control", autocomplete = "off" })
                                    @Html.ValidationMessageFor(m => m.pass, "", new { @class = "text-danger" })
                                    @*<div class="input-group input-group-merge">
                                            <input type="password" id="password" class="form-control" placeholder="Enter your password">
                                            <div class="input-group-append" data-password="false">
                                                <div class="input-group-text">
                                                    <span class="password-eye"></span>
                                                </div>
                                            </div>
                                        </div>*@
                                </div>

                                <div class="form-group mb-0 text-center form-login">
                                    <button class="btn btn-login btn-block btn-lg" type="submit"> Log In </button>
                                </div>

                            }

                        </div> <!-- end card-body -->
                    </div>
                    <!-- end card -->

                </div> <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>
    <!-- end page -->


    <footer class="footer footer-alt"></footer>

    <!-- Vendor js -->
    <script src="~/Content/js/vendor.min.js"></script>

    <!-- App js -->
    <script src="~/Content/js/app.min.js"></script>

</body>
</html>
